@model HashSet<string>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-controller="SortedSetType" asp-action="Add" method="post" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" value="" />
    <input type="number" name="score" value="" />
    <input type="submit" name="submit" value="submit" />
</form>
<hr />
@if (Model.Count > 0)
{
    <ul>
        @foreach (var name in Model)
        {
            <li>
                <span>@name</span>
                <a asp-controller="SortedSetType" asp-action="Remove" asp-route-name="@name">Remove</a>
            </li>
        }
    </ul>
}
else
{
    <p>No value added yet!</p>
}
