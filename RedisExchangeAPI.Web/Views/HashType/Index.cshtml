@model Dictionary<string, string>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-controller="HashType" asp-action="Add" method="post" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" value="" />
    <input type="text" name="value" value="" />
    <input type="submit" name="submit" value="submit" />
</form>
<hr />
@if (Model.Count > 0)
{
    <ul>
        @foreach (var keyValuePair in Model)
        {
            <li>
                <span>@keyValuePair.Key : @keyValuePair.Value</span>
                <a asp-controller="HashType" asp-action="Remove" asp-route-name="@keyValuePair.Key">Remove</a>
            </li>
        }
    </ul>
}
else
{
    <p>No value added yet!</p>
}